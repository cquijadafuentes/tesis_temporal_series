set yrange [-1.25:1.25]
plot 'eeg_autocorrelation.data' using 6 title 'Spatio-Temporal' with linespoints lt 2 pt 3 lc rgb red,   \
     '' using 2 title 'Temporal (lag_1)' with linespoints lt 2 pt 3 lc rgb blue,   \
     '' using 3 title 'Temporal (lag_2)' with linespoints lt 2 pt 3 lc rgb skyblue,   \
     '' using 4 title 'Temporal (lag_5)' with linespoints lt 2 pt 3 lc rgb green,   \
     '' using 5 title 'Temporal (lag_{10})' with linespoints lt 2 pt 3 lc rgb darkgreen



